@model List<CourseModel>

@{
    // Layout = "~/Admin/Views/Shared/_StudentLayout.cshtml";

}


<div class="container">
    <br />

    <h1>Alınan Kurs Listesi</h1>
    <hr />

    @if (Model.Count == 0)
    {
        <div class="alert alert-danger" role="alert">
            Henüz kurs satın almadınız.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var i in Model)
            {
                <div class="col-md-3">
                    <div class="card">
                       @*  <img src="@i.CourseImgUrl" height="150" class="card-img-top" alt="@i.Name"> *@
                        <div class="card-body">
                            <h5 class="card-title text-bold">@i.Name</h5>

                            <p class="card-text">@i.Description</p>

                        </div>
                        <div class="card-body">
                            <hr />
                            <a href="/Student/ListCourseDetail/@i.Id" class="btn btn-info  form-control">Kursu İzle</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    }
</div>



