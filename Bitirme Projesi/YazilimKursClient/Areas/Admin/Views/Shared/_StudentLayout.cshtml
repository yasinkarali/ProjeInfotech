@{
    Layout = null; // Alt layout kullanılmıyorsa null bırakılır
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Öğrenci Paneli</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/Student/Dashboard">Öğrenci Paneli</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Student/Courses">Kurslarım</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Student/Profile">Profilim</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Student/Notifications">Bildirimler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Student/Logout">Çıkış Yap</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 bg-light sidebar">
                <div class="list-group">
                    <a href="/Student/Dashboard" class="list-group-item list-group-item-action">Dashboard</a>
                    <a href="/Student/Courses" class="list-group-item list-group-item-action">Kurslarım</a>
                    <a href="/Student/Profile" class="list-group-item list-group-item-action">Profilim</a>
                    <a href="/Student/Notifications" class="list-group-item list-group-item-action">Bildirimler</a>
                    <a href="/Student/Settings" class="list-group-item list-group-item-action">Ayarlar</a>
                </div>
            </div>
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="footer bg-light text-center">
        <div class="container">
            <span class="text-muted">© 2024 Öğrenci Paneli</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
