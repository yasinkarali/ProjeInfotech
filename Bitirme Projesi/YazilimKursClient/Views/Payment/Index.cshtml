

<div class="container mt-5">
    <h2>Kredi Kartı Bilgileri</h2>
    <form asp-controller="Payment" asp-action="Index" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label for="nameSurname" class="form-label">Adı Soyadı:</label>
            <input name="NameSurname" value="Yasin Karali" type="text" class="form-control" id="nameSurname" placeholder="Kart numaranızı girin" required>
        </div>
        <div class="mb-3">
            <label for="kartno" class="form-label">Kart Numarası:</label>
            <input name="CardNumber" value="5528790000000008" type="text" class="form-control" id="kartno" placeholder="Kart numaranızı girin" required>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="skt-ay" class="form-label">Son Kullanma Tarihi (Ay):</label>
                    <input name="Month" value="12" type="text" class="form-control" id="skt-ay" placeholder="AA" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="skt-yil" class="form-label">Son Kullanma Tarihi (Yıl):</label>
                    <input name="Year" value="2030" type="text" class="form-control" id="skt-yil" placeholder="YY" required>
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="cvv" class="form-label">CVV Kodu:</label>
            <input name="Cvv" value="123" type="text" class="form-control" id="cvv" placeholder="CVV kodunu girin" required>
        </div>
        <button type="submit" class="btn btn-primary">Ödeme Yap</button>
    </form>
</div>




