@using System.Security.Claims
  <!-- Header Section Begin -->
<header class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-3 col-lg-2">
                <div class="header__logo">
					<a href="./index.html"><span>Yaska Eğitim</span></a>
                </div>
            </div>
            <div class="col-xl-6 col-lg-7">
                <nav class="header__menu">
                    <ul>
                       @await Html.PartialAsync("_TopMenuPartial")
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">
                <div class="header__right">
                    <div class="header__right__auth">

                        @if (User.Identity.IsAuthenticated)
                        {
                            var name = User.Claims.Where(x => x.Type == ClaimTypes.Name).FirstOrDefault().Value;
                            <a href="/admin/course">Hoşgeldin @name</a>
                            <a href="/admin/user/logout">Çıkış Yap</a>
                        }
                        else
                        {
                            <a href="/admin/user/login">Giriş Yap</a>
                            <a href="/admin/user/register">Kayıt Ol</a>
                        }


                      
                    </div>
                    <ul class="header__right__widget">
                        <li><span class="icon_search search-switch"></span></li>
                        <li>
                            <a href="#">
                                <span class="icon_heart_alt"></span>
                                <div class="tip">2</div>
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Card" asp-action="Index">
                                <span class="icon_bag_alt"></span>
                                <div class="tip">2</div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="canvas__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>
<!-- Header Section End -->