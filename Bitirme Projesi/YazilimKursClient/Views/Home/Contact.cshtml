@{
    ViewBag.Title = "İletişim";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <h2 class="mb-4">Bize Ulaşın</h2>
            <form>
                <div class="form-group">
                    <label for="name">Adınız</label>
                    <input type="text" class="form-control" id="name" placeholder="Adınızı girin" required>
                </div>
                <div class="form-group">
                    <label for="email">E-posta</label>
                    <input type="email" class="form-control" id="email" placeholder="E-posta adresinizi girin" required>
                </div>
                <div class="form-group">
                    <label for="message">Mesaj</label>
                    <textarea class="form-control" id="message" rows="5" placeholder="Mesajınızı yazın" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Gönder</button>
            </form>
        </div>
        <div class="col-lg-6 mb-4">
            <h2 class="mb-4">İletişim Bilgileri</h2>
            <ul class="list-unstyled">
                <li><i class="fa fa-map-marker-alt mr-2"></i>Adres: Örnek Mah., Örnek Cad., No:1, İstanbul, Türkiye</li>
                <li><i class="fa fa-phone mr-2"></i>Telefon: +90 123 456 7890</li>
                <li><i class="fa fa-envelope mr-2"></i>E-posta: info@example.com</li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h2 class="mb-4">Bizi Haritada Bulun</h2>
            <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3011.5676595217064!2d29.024789075857583!3d40.99094697135304!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab90b791eb969%3A0x2dddd27fe0fec750!2zSW5mb3RlY2ggQWNhZGVteSBZYXrEsWzEsW0gS3Vyc3UgKEthZMSxa8O2eSDFnnViZSk!5e0!3m2!1str!2str!4v1725467426337!5m2!1str!2str" width="1200" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>

<style>
    .map-container iframe {
        border: 0;
        border-radius: 4px;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #007bff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
</style>
